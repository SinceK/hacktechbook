<%= stylesheet_link_tag "user/user", :media => "all" %>
<div class="content">
  <h1 class="site-logo text-center"><img src="/images/logo.png" alt="HackTechBook"></h1>
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class="user-panel">
        <div class="panel-body">
          <%= form_for(@user) do |f| %>
            <div class="form-group">
              <%= f.text_field :name, class: 'form-control', placeholder: 'お名前' %>
            </div>
            <div class="form-group">
              <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'パスワード（確認）' %>
            </div>
            <div class="form-group">
              <%= f.submit '登録', class: 'btn btn-primary btn-lg btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>