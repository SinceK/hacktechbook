<div class="cover">
  <div class="cover-inner">
    <div class="cover-contents">
      <h1>HackTechBook</h1>
      <div class="search">
        <div class="row">
          <div class="text-center">
            <%= form_tag(new_book_path, method: :get, class: 'form-inline form-search') do %>
                  <%= text_field_tag :title, @title, class: 'form-control input-lg input-search', placeholder: "たのしいRuby", size: 50 %>
                  <%= button_tag type: 'submit', class: 'btn input-lg btn-search' do %>
                    <i class="fa fa-search"></i>
                  <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>