<% if current_user && current_user.have?(book) %>
  <%= form_tag(ownership_path(book.id), method: :delete) do %>
    <%= hidden_field_tag :book_id, book.id %>
    <%= hidden_field_tag :type, 'Have' %>
    <%= submit_tag '持ってる！解除', class: 'btn btn-success btn-sm' %>
  <% end %>
<% else %>
  <%= form_tag(ownerships_path) do %>
    <%= hidden_field_tag :isbn, book.isbn %>
    <%= hidden_field_tag :type, 'Have' %>
    <%= submit_tag '持ってる！', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>